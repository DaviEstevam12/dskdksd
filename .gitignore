def sistema_registro(nome,data,ocupacao):
    alfa_nome = nome[:3]

    alfa_data = data[-4:]
    ano_invertido = alfa_data[::-1]
    
    parte_ocupação = ocupação[::3]

    return alfa_nome + ano_invertido + parte_ocupação

