def triangulo (teta1,teta2,teta3):
    if teta1 + teta2 + teta3 !=180:
        return "NÃO É UM TRIÂNGULO"

    if teta1 == 90 or teta2 == 90 or teta3 == 90:
        return "Triângulo reto"
    elif teta1 > 90 or teta2 > 90 or teta3 > 90:
        return "Triângulo obtusângulo"
    else:
        return "Triângulo acutângulo"

